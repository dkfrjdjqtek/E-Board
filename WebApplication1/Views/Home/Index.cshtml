@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> S

@{
    // 레이아웃의 <title>에 쓰이는 페이지 제목도 리소스로
    ViewData["Title"] = S["Home_Title"];
}

<h1 class="display-4">@S["Home_Welcome"]</h1>

<p>
    @S["Home_Intro"]
    <a href="https://learn.microsoft.com/aspnet/core" target="_blank" rel="noopener">
        @S["Home_Intro_LinkText"]
    </a>.
</p>