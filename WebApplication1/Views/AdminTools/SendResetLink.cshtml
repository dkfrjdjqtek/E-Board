@model AdminToolsController.AdminSendResetLinkVM
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> S
@{
    ViewData["Title"] = S["Admin_ResetLink_Title"];
}

<h3 class="mb-3">@S["Admin_ResetLink_Title"]</h3>

@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

@if (TempData["Link"] is string link)
{
    <div class="alert alert-info">
        <div class="d-flex align-items-center justify-content-between">
            <span>@S["Admin_ResetLink_Link_Label"]</span>
            <a href="@link" class="btn btn-sm btn-outline-primary" target="_blank">
                @S["Admin_ResetLink_OpenBtn"]
            </a>
        </div>
        <div class="small text-break mt-1">@link</div>
    </div>
}

<form asp-action="SendResetLink" method="post" class="mt-3" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="UserNameOrEmail" class="form-label"></label>
        <input asp-for="UserNameOrEmail" class="form-control" />
        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="SendEmail" class="form-check-input" />
        <label asp-for="SendEmail" class="form-check-label"></label>
    </div>

    <button class="btn btn-warning w-100">@S["Admin_ResetLink_GenerateBtn"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
