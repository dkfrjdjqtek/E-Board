@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> S
@{
    ViewData["Title"] = "Template Mapping Saved";
    var path = (string)(ViewBag.Path ?? "");
    var excel = (string)(ViewBag.ExcelPath ?? "");
    var fields = (int)(ViewBag.Fields ?? 0);
    var approvals = (int)(ViewBag.Approvals ?? 0);
}
<div class="container py-4">
    <div class="alert alert-success">
        <strong>@S["_CM_Save"]</strong> OK — 매핑이 저장되었습니다.
    </div>

    <div class="card mb-3">
        <div class="card-header py-2">요약</div>
        <div class="card-body">
            <div class="mb-1"><b>Fields</b>: @fields</div>
            <div class="mb-1"><b>Approvals</b>: @approvals</div>
            <div class="mb-1"><b>Excel</b>: <code>@excel</code></div>
            <div class="mb-1"><b>JSON</b>: <code>@path</code></div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-primary"
           href="/DocumentTemplates/download-descriptor?path=@Uri.EscapeDataString(path)">
            디스크립터 다운로드
        </a>
        <a class="btn btn-secondary" href="/DocumentTemplates">돌아가기</a>
    </div>
</div>
