                    const el = document.getElementById(`ntk-name-${c}`);
                    if (el) { el.value = ''; EBValidate.clearInvalid(el); }
                });
                EBValidate.clearInvalid(ntkCompSel);
                EBValidate.clearInvalid(ntkDeptSel);
                EBValidate.clearAlert('nt-alert');
            }
