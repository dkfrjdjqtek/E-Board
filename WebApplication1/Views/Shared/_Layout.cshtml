@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Board</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- site -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <!-- custom overrides -->
    <link rel="stylesheet" href="~/css/_custom.css" asp-append-version="true" />
</head>
<body>
    <div id="shell" class="d-flex flex-column min-vh-100">
        <!-- 헤더: sticky(스크롤 고정) -->
        <header class="sticky-top">
            @await Html.PartialAsync("_Header")
        </header>

        <!-- 본문: 사이드바 + 컨텐츠 -->
        <div class="flex-grow-1 d-flex">
            <aside class="flex-shrink-0">
                @await Html.PartialAsync("_Sidebar")
            </aside>

            <main id="main" class="flex-grow-1 container py-3">
                @RenderBody()
            </main>
        </div>

        <!-- 푸터: 항상 바닥에 붙음 -->
        <footer id="site-footer" class="mt-auto border-top footer text-muted bg-white">
            <div class="container py-2">
                &copy; 2025 - WebApplication1 -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- Scripts (한 번만) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* 상태 토스트 *@
    @if (TempData["StatusMessage"] is string msg)
    {
        <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index:1080;">
            <div id="statusToast" class="toast border-0"
                 role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2500"
                 style="background-color:#198754;color:#fff;border-color:transparent;">
                <div class="d-flex">
                    <div class="toast-body">@msg</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
        <script>
            (() => {
                const el = document.getElementById('statusToast');
                if (el && window.bootstrap) new bootstrap.Toast(el).show();
            })();
        </script>
    }
</body>
</html>
