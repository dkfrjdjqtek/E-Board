@page
@model WebApplication1.Areas.Identity.Pages.Account.ResetPasswordModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> S
@{
    ViewData["Title"] = S["RP_Title"];
}
<h3 class="mb-3">@S["RP_Title"]</h3>

<form method="post" novalidate>
    <!-- 항상 렌더링: 비어 있으면 CSS로 숨김 -->
    <div asp-validation-summary="All"
         class="alert alert-danger mb-3"
         role="alert"></div>

    <input asp-for="Input.UserId" type="hidden" />
    <input asp-for="Input.Code" type="hidden" />

    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">@S["RP_Do"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
